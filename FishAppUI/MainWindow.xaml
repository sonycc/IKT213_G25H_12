<Window x:Class="FishAppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FishApp" Height="600" Width="800">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <!-- Select Image -->
            <Button Name="SelectButton" Width="200" Height="40" Click="SelectButton_Click" Margin="0,0,0,10">
                Select Image
            </Button>

            <!-- Original Image Preview -->
            <Image Name="OriginalImage" Width="400" Height="300" Margin="0,0,0,10"/>

            <!-- Upload Button -->
            <Button Name="UploadButton" Width="200" Height="40" Click="UploadButton_Click" Margin="0,0,0,20">
                Upload Image
            </Button>

            <!-- Operations -->
            <TextBlock Text="Operations:" Margin="0,0,0,5" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Name="Rotate90Button" Width="100" Click="Rotate90Button_Click" Margin="0,0,10,0">Rotate 90°</Button>
                <Button Name="Rotate180Button" Width="100" Click="Rotate180Button_Click" Margin="0,0,10,0">Rotate 180°</Button>
                <Button Name="Rotate270Button" Width="100" Click="Rotate270Button_Click">Rotate 270°</Button>
            </StackPanel>

            <Button Name="GrayscaleButton" Width="200" Height="40" Click="GrayscaleButton_Click" Margin="0,0,0,20">
                Grayscale
            </Button>

            <!-- Processed Image Preview -->
            <TextBlock Text="Result:" Margin="0,0,0,5" FontWeight="Bold"/>
            <Image Name="ProcessedImage" Width="400" Height="300"/>
        </StackPanel>
    </Grid>
</Window>
