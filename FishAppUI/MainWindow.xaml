<Window x:Class="FishAppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FishApp" Height="956" Width="800">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <!-- File Menu -->
            <MenuItem Header="File">
                <MenuItem x:Name="FileNewMenuItem" Header="New" />
                <MenuItem x:Name="FileOpenMenuItem" Header="Open" />
                <MenuItem x:Name="FileSaveMenuItem" Header="Save" />
                <MenuItem x:Name="FileSaveAsMenuItem" Header="Save As" />
                <Separator/>
                <MenuItem x:Name="FilePropertiesMenuItem" Header="Properties" />
                <Separator/>
                <MenuItem x:Name="FileQuitMenuItem" Header="Quit" />
            </MenuItem>

            <!-- Clipboard Menu -->
            <MenuItem Header="_Clipboard">
                <MenuItem x:Name="ClipboardCopyMenuItem" Header="Copy" />
                <MenuItem x:Name="ClipboardPasteMenuItem" Header="Paste" />
                <MenuItem x:Name="ClipboardCutMenuItem" Header="Cut" />
            </MenuItem>

            <!-- Image Menu -->
            <MenuItem Header="_Image">
                <MenuItem Header="Select Shape">
                    <MenuItem x:Name="RectangularSelectMenuItem" Header="Rectangular Selection" />
                    <MenuItem x:Name="FreeformSelectMenuItem" Header="Freeform Selection" />
                    <MenuItem x:Name="PolygonSelectMenuItem" Header="Polygon Selection" />
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="CropMenuItem" Header="Crop" />
                <MenuItem x:Name="ResizeMenuItem" Header="Resize" />
                <MenuItem Header="Rotate">
                    <MenuItem x:Name="Rotate90MenuItem" Header="Rotate 90°" />
                    <MenuItem x:Name="Rotate180MenuItem" Header="Rotate 180°" />
                    <MenuItem x:Name="Rotate270MenuItem" Header="Rotate 270°" />
                </MenuItem>
                <MenuItem Header="Flip">
                    <MenuItem x:Name="FlipHorizontalMenuItem" Header="Flip Horizontal" />
                    <MenuItem x:Name="FlipVerticalMenuItem" Header="Flip Vertical" />
                </MenuItem>
            </MenuItem>


            <!-- Tools Menu -->
            <MenuItem Header="_Tools">
                <MenuItem x:Name="ZoomInMenuItem" Header="Zoom In" />
                <MenuItem x:Name="ZoomOutMenuItem" Header="Zoom Out" />
                <MenuItem x:Name="EraserMenuItem" Header="Eraser" />
                <MenuItem x:Name="ColorPickerMenuItem" Header="Color Picker" />
                <MenuItem Header="Paint Brushes">
                    <MenuItem x:Name="BrushBasicMenuItem" Header="Basic Brush" />
                    <MenuItem x:Name="BrushTextureMenuItem" Header="Texture Brush" />
                    <MenuItem x:Name="BrushPatternMenuItem" Header="Pattern Brush" />
                </MenuItem>
                <MenuItem x:Name="TextToolMenuItem" Header="Text Tool" />
                <Separator/>
                <MenuItem x:Name="GaussianBlurMenuItem" Header="Gaussian Blur" />
                <MenuItem x:Name="SobelFilterMenuItem" Header="Sobel Filter" />
                <MenuItem x:Name="BinaryFilterMenuItem" Header="Binary Filter (Histogram Thresholding)" />
            </MenuItem>


            <!-- Shapes Menu -->
            <MenuItem Header="_Shapes">
                <MenuItem x:Name="ShapeRectangleMenuItem" Header="Rectangle" />
                <MenuItem x:Name="ShapeEllipseMenuItem" Header="Ellipse" />
                <MenuItem x:Name="ShapeLineMenuItem" Header="Line" />
                <MenuItem x:Name="ShapePolygonMenuItem" Header="Polygon" />
                <Separator/>
                <MenuItem x:Name="ShapeOutlineColorMenuItem" Header="Outline Color" />
                <MenuItem x:Name="ShapeFillColorMenuItem" Header="Fill Color" />
            </MenuItem>


            <!-- Color Menu -->
            <MenuItem Header="_Color">
                <MenuItem x:Name="ColorPaletteMenuItem" Header="Color Palette" />
                <MenuItem Header="Brush Size">
                    <MenuItem x:Name="BrushSizeSmallMenuItem" Header="Small" />
                    <MenuItem x:Name="BrushSizeMediumMenuItem" Header="Medium" />
                    <MenuItem x:Name="BrushSizeLargeMenuItem" Header="Large" />
                </MenuItem>
            </MenuItem>


            <!-- Layer Menu (Optional) -->
            <MenuItem Header="_Layer">
                <MenuItem x:Name="NewLayerMenuItem" Header="New Layer"/>
                <MenuItem x:Name="LoadLayerMenuItem" Header="Load Layer"/>
                <MenuItem x:Name="EditLayerMenuItem" Header="Edit Layer"/>
                <MenuItem x:Name="SelectLayerMenuItem" Header="Select Layer"/>
                <MenuItem x:Name="DeleteLayerMenuItem" Header="Delete Layer"/>
                <MenuItem x:Name="RenameLayerMenuItem" Header="Rename Layer"/>
            </MenuItem>

            <!-- Filters Menu (Optional Snapchat-like) -->
            <MenuItem Header="_Filters">
                <MenuItem x:Name="LightningFilterMenuItem" Header="Lightning Filter"/>
                <MenuItem x:Name="FireFilterMenuItem" Header="Fire Filter"/>
                <MenuItem x:Name="BubblesFilterMenuItem" Header="Bubbles Filter"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="389*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1">
            <!-- Top Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Name="SelectButton" Width="120" Height="40" Click="SelectButton_Click" Margin="0,0,10,0">
                    Select Image
                </Button>
                <Button Name="UploadButton" Width="120" Height="40" Click="UploadButton_Click" Margin="0,0,10,0" IsEnabled="False">
                    Upload Image
                </Button>
                <Button Name="DownloadButton" Width="120" Height="40" Click="DownloadButton_Click" Margin="0,0,0,0" IsEnabled="False">
                    Download Image
                </Button>
            </StackPanel>

            <!-- Original Image Preview -->
            <Image Name="OriginalImage" Width="400" Height="300" Margin="0,0,0,20"/>

            <!-- Operations -->
            <TextBlock Text="Operations:" Margin="0,0,0,5" FontWeight="Bold"/>

            
            <!--
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Name="Rotate90Button" Width="100" Click="Rotate90Button_Click" Margin="0,0,10,0">Rotate 90°</Button>
                <Button Name="Rotate180Button" Width="100" Click="Rotate180Button_Click" Margin="0,0,10,0">Rotate 180°</Button>
                <Button Name="Rotate270Button" Width="100" Click="Rotate270Button_Click">Rotate 270°</Button>
            </StackPanel>
            -->  

            <Button Name="GrayscaleButton" Width="200" Height="40" Click="GrayscaleButton_Click" Margin="0,0,0,10">
                Grayscale
            </Button>

            <Button Name="OnnxButton" Width="200" Height="40" Click="OnnxButton_Click" Margin="0,0,0,10">
                Run ONNX
            </Button>

            <!-- Undo and Reset Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Name="UndoButton" Width="100" Height="40" Click="UndoButton_Click" Margin="0,0,10,0" IsEnabled="False">
                    Undo
                </Button>
                <Button Name="ResetButton" Width="100" Height="40" Click="ResetButton_Click" Margin="0,0,0,0" IsEnabled="False">
                    Reset
                </Button>
            </StackPanel>

            <!-- Processed Image Preview -->
            <TextBlock Text="Result:" Margin="0,0,0,5" FontWeight="Bold"/>
            <Image Name="ProcessedImage" Width="400" Height="300"/>
        </StackPanel>
        </Grid>
    </DockPanel>
</Window>
